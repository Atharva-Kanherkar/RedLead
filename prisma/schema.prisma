generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
   id        String     @id
  email     String     @unique
  // ... other user fieldss
  campaigns Campaign[]
  plan               String   @default("free") // e.g., "free", "pro"
  stripeCustomerId   String?  @unique // To link with Stripe for payments
  subscriptionStatus String?  // e.g., "active", "canceled", "past_due"
}

 model Campaign {
  id                  String    @id @default(cuid())
  userId              String
  user                User      @relation(fields: [userId], references: [id])
  
  analyzedUrl         String
  generatedKeywords   String[]
  generatedDescription String   @db.Text

  // --- NEW FIELD ---
  // Stores the list of subreddits recommended by the AI for this specific campaign
  targetSubreddits    String[]  @default([])

  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
  description        String?   @db.Text // Optional description for the campaign 
  leads               Lead[]
}

// ... existing User and Campaign models ...

// ...existing User and Campaign models...

model Lead {
  id               String   @id @default(cuid())
  redditId         String   @unique // The Reddit post ID (e.g., "xyz123") to prevent duplicates
  title            String   @db.Text
  author           String
  subreddit        String
  url              String   @unique
  body             String?  @db.Text
  intent           String?  // e.g., "pain_point", "solution_seeking"
  // The timestamp from Reddit when the post was created
  postedAt         DateTime

  // The timestamp when our system discovered this lead
  discoveredAt     DateTime @default(now())
  
  // The calculated score
  opportunityScore Int

  // The status of the lead in our system's workflow
  status           String   @default("new") // e.g., "new", "contacted", "archived"

  // Relation to the campaign that found this lead
  campaignId       String
  campaign         Campaign @relation(fields: [campaignId], references: [id])
}


// This table will store pre-analyzed data about subreddits to inform
// engagement strategies and AI-powered response generation in Layer 3.
model SubredditProfile {
  id   String @id @default(cuid())
  name String @unique // The name of the subreddit (e.g., "solana")

  // Data fetched and analyzed by a background worker
  rules            String[] @default([]) // A list of the subreddit's official rules
  cultureNotes     String?  @db.Text    // AI-generated summary of the subreddit's vibe and posting style
  peakActivityTime String?  // e.g., "weekdays_afternoon_et"

  lastAnalyzedAt DateTime @updatedAt
}